{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "npm"]
        }
      },
      "phasesOrder": ["setup", "install", "build"],
      "install": {
        "cmds": ["cd backend && npm install"]
      }
    }
  },
  "deploy": {
    "startCommand": "cd backend && node server.cjs"
  }
}
